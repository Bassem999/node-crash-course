<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= blog.title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css" integrity="sha384-DhY6onE6f3zzKbjUPRc2hOzGAdEf4/Dz+WJwBvEYL/lkkIsI3ihufq9hk9K4lVoK" crossorigin="anonymous")
    link(rel="stylesheet" href='../css/style.css')
  body
    include ./partials/header

    h1= blog.title
    p(style="font-size: 20px")= blog.body
    p= blog.date
    p= blog.author
    if (prev > 0 )
      a(href=`${blogs[prev -1]._id}` title="previous Post" class="nav-link d-inline display-4") &larr;
    else
      a( title="previous Post" class="nav-link d-inline disabled display-4") &larr;
    if (next <= blogs.length - 1 )
      a(href=`${blogs[next]._id}`, title="Next Post" class="nav-link d-inline display-4") &rarr;
    else
      a( title="previous Post" class="nav-link d-inline disabled display-4") &rarr;

    script(src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js" integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD" crossorigin="anonymous")
